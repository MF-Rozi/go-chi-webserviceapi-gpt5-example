# Server
PORT=8080

# DB pieces (assembled into DSN in Go)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=appdb
DB_SSLMODE=disable         # disable | require | verify-ca | verify-full
DB_SSLROOTCERT=            # optional path to CA file when using verify-*

# Auth
JWT_SECRET=supersecret_change_me
JWT_ISSUER=go-chi-sqlc-auth
JWT_EXPIRES_MIN=60

# Crypto
BCRYPT_COST=12

# Misc
AUTO_MIGRATE=true          # run migrations on startup
SEED=true                  # seed admin + demo users on startup
